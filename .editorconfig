# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.{php,sample,html,html.php,js,css,scss,json,md}]
trim_trailing_whitespace = true

[*.{html,html.php,js,css,scss,json,md}]
indent_size = 2
